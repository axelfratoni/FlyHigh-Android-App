<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/LOGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="2"
        android:layout_gravity="left"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:text="LOGO" />

    <TextView
        android:id="@+id/flight_departureAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:layout_row="0"
        android:gravity="center_horizontal"
        android:text="EZE"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:text="->" />

    <TextView
        android:id="@+id/flight_arrivalAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="3"
        android:layout_row="0"
        android:gravity="center_horizontal"
        android:text="JFK"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flight_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="2"
        android:layout_gravity="right"
        android:layout_row="0"
        android:text="4657"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/flight_departureHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:layout_row="1"
        android:gravity="center_horizontal"
        android:text="07.00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/flight_arrivalHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="3"
        android:layout_row="1"
        android:gravity="center_horizontal"
        android:text="21.00"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/flight_airlineId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="2"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="AERO"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flight_departureCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:layout_row="2"
        android:gravity="center_horizontal"
        android:maxLength="12"
        android:scrollHorizontally="true"
        android:text="Buenos Aires"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/flight_arrivalCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="3"
        android:layout_row="2"
        android:gravity="center_horizontal"
        android:maxLength="12"
        android:scrollHorizontally="true"
        android:text="Nueva York"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/flight_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="2"
        android:layout_gravity="right"
        android:layout_row="2"
        android:text="Volando" />

</GridLayout>